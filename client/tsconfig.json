{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@constants/*": [
        "./src/constants/*"
      ],
      "@context/*": [
        "./src/context/*"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@lang/*": [
        "./src/lang/*"
      ],
      "@redux/*": [
        "./src/redux/*"
      ],
      "@routers/*": [
        "./src/routers/*"
      ],
      "@scss/*": [
        "./src/scss/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@HOCs/*": [
        "./src/HOCs/*"
      ],
      "react-slick": [
        "../node_modules/react-slick"
      ],
      "slick-carousel/slick": [
        "../node_modules/slick-carousel/slick"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
